@{ 
	ViewBag.Title = "Index";
}
@model WEB_153503_Olszewski.Models.ListDemo
<div>
	<h1>@ViewData["LabNumber"]</h1>
	<div>
		<h3>Список</h3>
		<ol type="A">
			@for(int i = 0; i < 7; i++)
			{
				<li>Элемент списка @i</li>
			}
		</ol>
	</div>
	<div>
		<h3>Форма</h3>
		<form method="get">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" value="" id="flexCheck1">
				<label class="form-check-label" for="flexCheck2">
					Checkbox 1
				</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="checkbox" value="" id="flexCheck2">
				<label class="form-check-label" for="flexCheck2">
					Checkbox 2
				</label>
			</div>

			<div class="row col-lg-3">
				<div class="form-check col-sm">
					<input class="form-check-input" type="radio" name="flexRadio1" id="flexRadio1">
					<label class="form-check-label" for="flexRadio1">
						radio 1
					</label>
				</div>
				<div class="form-check col-sm">
					<input class="form-check-input" type="radio" name="flexRadio2" id="flexRadio2">
					<label class="form-check-label" for="flexRadio2">
						radio 2
					</label>
				</div>
				<div class="form-check col-sm">
					<input class="form-check-input" type="radio" name="flexRadio3" id="flexRadio3">
					<label class="form-check-label" for="flexRadio3">
						radio 3
					</label>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Email</label>
				<div class="col-sm-10">
					<input type="email" class="form-control" id="inputEmail">
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Password</label>
				<div class="col-sm-10">
					<input type="password" class="form-control" id="inputPassword3">
				</div>
			</div>
			<button type="submit" class="btn btn-primary" formmethod="get">Submit</button>
		</form>
		<h3>Вторая форма</h3>
		<form>
			<select asp-for="ID" asp-items="ViewBag.SelectList"></select>
			<button type="submit" class="btn btn-primary" formmethod="get">Submit</button>
		</form>
	</div>
</div>
